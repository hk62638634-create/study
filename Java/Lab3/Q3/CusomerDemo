import java.util.Scanner;

public class CustomerDemo {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("=== Preferred Customer Registration ===\n");
        
        // Get input
        System.out.print("Enter name: ");
        String name = scanner.nextLine();
        
        System.out.print("Enter address: ");
        String address = scanner.nextLine();
        
        System.out.print("Enter phone number: ");
        String phone = scanner.nextLine();
        
        System.out.print("Enter customer number: ");
        int customerNumber = scanner.nextInt();
        
        System.out.print("Join mailing list? (true/false): ");
        boolean mailingList = scanner.nextBoolean();
        
        System.out.print("Enter purchases amount: $");
        double purchases = scanner.nextDouble();
        
        // Create PreferredCustomer object
        PreferredCustomer customer = new PreferredCustomer(
            name, address, phone, customerNumber, mailingList, purchases
        );
        
        // Display information
        System.out.println("\n=== Customer Information ===");
        System.out.println("Name: " + customer.getName());
        System.out.println("Phone: " + customer.getPhone());
        System.out.printf("Purchase Amount: $%.2f%n", customer.getPurchases());
        System.out.printf("Discount Level: %.1f%%%n", customer.getDiscountLevel());
        
        scanner.close();
    }
}